# CRAFT UPDATE PLUGIN
# example:
# cupseomatic rba_craft
cup() {
	if [ -d "$1/plugins/$2" ]; then
		cd "$1"/plugins/$2 && git pull && cd ../../../;
	else
		cd "$1"/plugins/ && git clone $3 $2 && cd ../../;
	fi
}
cupadminbar() {
	cup $1 adminbar https://github.com/wbrowar/adminbar.git;
}
